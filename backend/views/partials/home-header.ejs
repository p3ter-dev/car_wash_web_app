<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="#">Car Wash Service</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link active" href="/api/home">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/api/about">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="/api/services">Services</a></li>
                    <li class="nav-item"><a class="nav-link" href="/api/contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/api/booking">Book Now</a></li>
                </ul>
                <button class="btn btn-outline-light ms-3" id="toggleDarkMode">
                    <img id="darkModeIcon" src="images/moon.svg" alt="Dark Mode" width="20" height="20">
                </button>  
            </div>
        </div>
    </nav>

    <header class="bg-light text-center py-5">
        <div class="container">
            <h1 class="display-4">Crystal Car Wash Service</h1>
            <p class="lead">We provide top-quality car cleaning and detailing services with professional care.</p>
            <a href="/api/services" class="btn btn-primary btn-lg">Explore Services</a>
            <a href="/api/booking" class="btn btn-primary btn-lg">Book a Wash</a>
        </div>      
    </header>

    <section class="container my-5">
        <h2 class="text-center">Our Services</h2>
        <div class="row text-center mt-4">
            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <div class="card-body">
                        <h5 class="card-title">Exterior Wash</h5>
                        <p class="card-text">Professional exterior cleaning for a spotless shine.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <div class="card-body">
                        <h5 class="card-title">Interior Detailing</h5>
                        <p class="card-text">Deep cleaning for seats, dashboard, and carpets.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm p-3">
                    <div class="card-body">
                        <h5 class="card-title">Wax & Polish</h5>
                        <p class="card-text">Enhance your carâ€™s shine with premium waxing.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        const toggleDarkMode = document.getElementById("toggleDarkMode");
        const darkModeIcon = document.getElementById("darkModeIcon");
        const body = document.body;
    
        function updateDarkModeIcon() {
            if (body.classList.contains("dark-mode")) {
                darkModeIcon.src = "images/sun.svg";
                darkModeIcon.alt = "Light Mode";
            } else {
                darkModeIcon.src = "images/moon.svg";
                darkModeIcon.alt = "Dark Mode";
            }
        }
        if (localStorage.getItem("darkMode") === "enabled") {
            body.classList.add("dark-mode");
            updateDarkModeIcon();
        }
    
        toggleDarkMode.addEventListener("click", () => {
            body.classList.toggle("dark-mode");
            localStorage.setItem("darkMode", body.classList.contains("dark-mode") ? "enabled" : "disabled");
            updateDarkModeIcon();
        });
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
