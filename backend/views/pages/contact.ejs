<%- include('../partials/contact-header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/styles.css" />
  <title><%= title %></title>
</head>
<body>

<header class="bg-dark text-white text-center py-5 hero-section" style="background-image: url('/images/contact-banner.jpg'); background-size: cover; background-position: center;">
  <div class="container">
    <h1 class="display-4 fw-bold">Get In Touch</h1>
    <p class="lead">We’d love to hear from you - questions, feedback, or anything else!</p>
  </div>
</header>

<section class="contact-form py-5">
  <div class="container">
    <h2 class="text-center mb-4">Contact Us</h2>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <form action="/api/contact" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input type="text" id="name" name="name" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" id="email" name="email" class="form-control" required />
          </div>
          <div class="mb-3">
            <label for="message" class="form-label">Your Message</label>
            <textarea id="message" name="message" rows="5" class="form-control" required></textarea>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<section class="bg-light py-5 text-center">
  <div class="container">
    <h3>Visit Us</h3>
    <p>Addis Ababa, Ethiopia — Near XYZ Landmark</p>
    <p><strong>Phone:</strong> +251 900 123 456</p>
    <p><strong>Email:</strong> info@crystalcarwash.et</p>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

